---
// Henter parametrene fra Astro.props
const { href = "#", target = "_self", variant = "textlink", size = "standard" } = Astro.props;

const linkStyling = "transition transform hover:-translate-y-1 font-lato";

const variantClasses = {
  textlink: "text-[#1C1E23] no-underline hover:text-[#FF1054]",
  primary: "bg-[#FF1054] hover:bg-[#B4003C] text-[#FAFAFA] rounded-full px-6 p-2 font-semibold uppercase",
  secondary: "bg-[#007C79] hover:bg-[#0A5755] text-[#FAFAFA]  hover:text-red-700 rounded-full px-6 p-2 font-semibold uppercase",
};

const sizeClasses = {
  standard: "text-base",
  large: "text-3xl",
  medium: "text-2xl",
  small: "text-lg",
};
---

<a href={href} target={target} class={`${linkStyling} ${variantClasses[variant]} ${sizeClasses[size]}`}>
  <slot />
</a>
